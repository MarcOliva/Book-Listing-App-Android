<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="oliva.marc.com.booklisting.BookListActivity">

    <ImageView
        android:id="@+id/portada_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/ic_search_white_36dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/title_book_text_view"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title" />

        <TextView
            android:id="@+id/autors_book_text_view"
            style="@style/autors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Autors" />

        <TextView
            android:id="@+id/description_book_text_view"
            style="@style/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Description" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:src="@drawable/ic_visibility_black_24dp" />

</LinearLayout>